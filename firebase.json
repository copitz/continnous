{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "dist",
    "rewrites": [
      {
        "source": "!/static/**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers" : [
          {
            "key" : "Cache-Control",
            "value" : "public, max-age=0, must-revalidate"
          }
        ]
      },
      {
        "source": "static/**",
        "headers" : [
          {
            "key" : "Cache-Control",
            "value" : "public, max-age=31536000"
          }
        ]
      }
    ]
  }
}
